<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Weather.TodoItemPage" 
			 Title="Todo">
	<StackLayout Margin="20" VerticalOptions="StartAndExpand">
		<Label Text="Name" />
        <Entry x:Name="nameEntry" Text="{Binding Path=Name}" Placeholder="about this location..." />
        <Label Text="Location" />
        <Label x:Name="location" Text="{Binding Path=Forecast.timezone}" />
        <Label Text="Temperature" />
        <Label x:Name="temperature" Text="{Binding Path=Forecast.currently.apparentTemperature}" />
        <Label Text="Conditions" />
        <Label x:Name="conditions" Text="{Binding Path=Forecast.currently.summary}" />
        <Label Text="Notes" />
        <Entry x:Name="notesEntry" Text="{Binding Path=Notes}" Placeholder="anything to declare?" />
        <Label Text="Done" />
		<Switch x:Name="doneSwitch" IsToggled="{Binding Path=Done}" />
		<Button Text="Save" Clicked="OnSaveActivated" />
		<Button Text="Delete" Clicked="OnDeleteActivated" />
		<Button Text="Cancel" Clicked="OnCancelActivated" />
		<Button Text="Speak" Clicked="OnSpeakActivated" />
	</StackLayout>
</ContentPage>
